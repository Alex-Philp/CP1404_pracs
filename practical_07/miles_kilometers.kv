BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: user_input
            text: app.text_input
            size_hint_min_x: 200
            multiline: False
            on_text: app.handle_press(user_input.text)
        BoxLayout:
            orientation: 'vertical'
            Button:
                text: 'Up'
                on_press: app.handle_increment(user_input.text,1)
            Button
                text: 'down'
                on_press: app.handle_increment(user_input.text,-1)
#    Button:
#        text: 'Convert miles to kilometers'
#        on_press: app.handle_press(user_input.text)
    Label:
        text: app.message
        color: (1, 1, 0, 1)